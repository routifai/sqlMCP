# Database Configuration
DB_TEST_CONNECTION_STRING=postgresql://postgres:postgres@localhost:5432/test_sqlmcp

# LLM Settings
OPENAI_API_KEY=your_openai_api_key_here
TEXT2SQL_MODEL=gpt-4o-mini

# Discovery Settings (disable expensive LLM discovery)
ENABLE_LLM_DISCOVERY=false
DISCOVERY_ON_STARTUP=false
DISCOVERY_INTERVAL_HOURS=24

# Performance Settings
MAX_CONCURRENT_QUERIES=5
SCHEMA_CACHE_TTL=3600
MAX_ROWS_RETURNED=1000
QUERY_TIMEOUT_SECONDS=30

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
LOG_LEVEL=INFO

# Safety Settings
ALLOWED_OPERATIONS=SELECT
MAX_TABLES_PER_QUERY=10
ENABLE_QUERY_EXPLANATION=true 